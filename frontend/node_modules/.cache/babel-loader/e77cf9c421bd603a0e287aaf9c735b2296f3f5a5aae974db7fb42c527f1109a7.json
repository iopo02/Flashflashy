{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/es.json.stringify.js\";\nimport axios from 'axios';\nexport default {\n  name: 'LoginPage',\n  data() {\n    return {\n      formData: {\n        emailOrUsername: '',\n        password: ''\n      },\n      emailOrUsernameError: '',\n      passwordError: '',\n      isSubmitting: false,\n      successMessage: '',\n      errorMessage: ''\n    };\n  },\n  methods: {\n    clearEmailOrUsernameError() {\n      this.emailOrUsernameError = '';\n      this.errorMessage = '';\n    },\n    clearPasswordError() {\n      this.passwordError = '';\n      this.errorMessage = '';\n    },\n    async handleLogin() {\n      // Clear previous messages\n      this.successMessage = '';\n      this.errorMessage = '';\n      this.emailOrUsernameError = '';\n      this.passwordError = '';\n\n      // Validation\n      if (!this.formData.emailOrUsername.trim()) {\n        this.emailOrUsernameError = 'Email or username is required';\n        return;\n      }\n      if (!this.formData.password) {\n        this.passwordError = 'Password is required';\n        return;\n      }\n      this.isSubmitting = true;\n      try {\n        const response = await axios.post('/users/login', {\n          emailOrUsername: this.formData.emailOrUsername.trim(),\n          password: this.formData.password\n        });\n\n        // Store user data in localStorage\n        localStorage.setItem('user', JSON.stringify(response.data.user));\n        localStorage.setItem('userId', response.data.user.id);\n\n        // Trigger custom event to update App.vue (storage event doesn't fire in same tab)\n        window.dispatchEvent(new CustomEvent('userLogin'));\n        this.successMessage = 'Login successful! Redirecting...';\n\n        // Redirect to home page after a short delay\n        setTimeout(() => {\n          this.$router.push('/');\n        }, 1000);\n      } catch (error) {\n        if (error.response?.status === 401) {\n          this.errorMessage = error.response.data?.message || 'Invalid email/username or password';\n        } else if (error.response?.status === 400) {\n          this.errorMessage = error.response.data?.message || 'Please fill in all fields';\n        } else if (error.request) {\n          this.errorMessage = 'Cannot connect to server. Please make sure the backend is running.';\n        } else {\n          this.errorMessage = 'Error during login. Please try again.';\n        }\n      } finally {\n        this.isSubmitting = false;\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","formData","emailOrUsername","password","emailOrUsernameError","passwordError","isSubmitting","successMessage","errorMessage","methods","clearEmailOrUsernameError","clearPasswordError","handleLogin","trim","response","post","localStorage","setItem","JSON","stringify","user","id","window","dispatchEvent","CustomEvent","setTimeout","$router","push","error","status","message","request"],"sources":["C:\\Users\\compu\\Desktop\\Flashflashy\\frontend\\src\\views\\LoginPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"login-page\">\r\n    <div class=\"login-container\">\r\n      <h1>Login</h1>\r\n      <form @submit.prevent=\"handleLogin\" class=\"login-form\">\r\n        <!-- Email/Username Field -->\r\n        <div class=\"form-group\">\r\n          <label for=\"emailOrUsername\">Email or Username</label>\r\n          <input\r\n            id=\"emailOrUsername\"\r\n            v-model=\"formData.emailOrUsername\"\r\n            type=\"text\"\r\n            required\r\n            :class=\"{ 'error': emailOrUsernameError }\"\r\n            @input=\"clearEmailOrUsernameError\"\r\n            placeholder=\"Enter your email or username\"\r\n          />\r\n          <div v-if=\"emailOrUsernameError\" class=\"error-message\">{{ emailOrUsernameError }}</div>\r\n        </div>\r\n\r\n        <!-- Password Field -->\r\n        <div class=\"form-group\">\r\n          <label for=\"password\">Password</label>\r\n          <input\r\n            id=\"password\"\r\n            v-model=\"formData.password\"\r\n            type=\"password\"\r\n            required\r\n            :class=\"{ 'error': passwordError }\"\r\n            @input=\"clearPasswordError\"\r\n            placeholder=\"Enter your password\"\r\n          />\r\n          <div v-if=\"passwordError\" class=\"error-message\">{{ passwordError }}</div>\r\n        </div>\r\n\r\n        <!-- Submit Button -->\r\n        <button type=\"submit\" :disabled=\"isSubmitting\" class=\"submit-btn\">\r\n          <span v-if=\"isSubmitting\">Logging in...</span>\r\n          <span v-else>Login</span>\r\n        </button>\r\n\r\n        <!-- Success/Error Messages -->\r\n        <div v-if=\"successMessage\" class=\"success-message\">{{ successMessage }}</div>\r\n        <div v-if=\"errorMessage\" class=\"error-message\">{{ errorMessage }}</div>\r\n      </form>\r\n\r\n      <div class=\"register-link\">\r\n        <p>Don't have an account? <router-link to=\"/register\">Register</router-link></p>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'LoginPage',\r\n  data() {\r\n    return {\r\n      formData: {\r\n        emailOrUsername: '',\r\n        password: '',\r\n      },\r\n      emailOrUsernameError: '',\r\n      passwordError: '',\r\n      isSubmitting: false,\r\n      successMessage: '',\r\n      errorMessage: '',\r\n    };\r\n  },\r\n  methods: {\r\n    clearEmailOrUsernameError() {\r\n      this.emailOrUsernameError = '';\r\n      this.errorMessage = '';\r\n    },\r\n    clearPasswordError() {\r\n      this.passwordError = '';\r\n      this.errorMessage = '';\r\n    },\r\n    async handleLogin() {\r\n      // Clear previous messages\r\n      this.successMessage = '';\r\n      this.errorMessage = '';\r\n      this.emailOrUsernameError = '';\r\n      this.passwordError = '';\r\n\r\n      // Validation\r\n      if (!this.formData.emailOrUsername.trim()) {\r\n        this.emailOrUsernameError = 'Email or username is required';\r\n        return;\r\n      }\r\n\r\n      if (!this.formData.password) {\r\n        this.passwordError = 'Password is required';\r\n        return;\r\n      }\r\n\r\n      this.isSubmitting = true;\r\n\r\n      try {\r\n        const response = await axios.post('/users/login', {\r\n          emailOrUsername: this.formData.emailOrUsername.trim(),\r\n          password: this.formData.password,\r\n        });\r\n\r\n        // Store user data in localStorage\r\n        localStorage.setItem('user', JSON.stringify(response.data.user));\r\n        localStorage.setItem('userId', response.data.user.id);\r\n\r\n        // Trigger custom event to update App.vue (storage event doesn't fire in same tab)\r\n        window.dispatchEvent(new CustomEvent('userLogin'));\r\n\r\n        this.successMessage = 'Login successful! Redirecting...';\r\n\r\n        // Redirect to home page after a short delay\r\n        setTimeout(() => {\r\n          this.$router.push('/');\r\n        }, 1000);\r\n      } catch (error) {\r\n        if (error.response?.status === 401) {\r\n          this.errorMessage = error.response.data?.message || 'Invalid email/username or password';\r\n        } else if (error.response?.status === 400) {\r\n          this.errorMessage = error.response.data?.message || 'Please fill in all fields';\r\n        } else if (error.request) {\r\n          this.errorMessage = 'Cannot connect to server. Please make sure the backend is running.';\r\n        } else {\r\n          this.errorMessage = 'Error during login. Please try again.';\r\n        }\r\n      } finally {\r\n        this.isSubmitting = false;\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.login-page {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  min-height: calc(100vh - 100px);\r\n  padding: 20px;\r\n}\r\n\r\n.login-container {\r\n  background: #1a2e24;\r\n  border: 1px solid #2d4a3a;\r\n  border-radius: 16px;\r\n  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);\r\n  padding: 48px;\r\n  width: 100%;\r\n  max-width: 480px;\r\n}\r\n\r\nh1 {\r\n  text-align: center;\r\n  color: #2d8659;\r\n  margin-bottom: 32px;\r\n  font-size: 2rem;\r\n  font-weight: 600;\r\n}\r\n\r\n.login-form {\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.form-group {\r\n  margin-bottom: 24px;\r\n  text-align: left;\r\n}\r\n\r\nlabel {\r\n  display: block;\r\n  margin-bottom: 10px;\r\n  color: #c8e6c9;\r\n  font-weight: 500;\r\n  font-size: 14px;\r\n}\r\n\r\ninput {\r\n  width: 100%;\r\n  padding: 14px;\r\n  background-color: #0d1b13;\r\n  border: 2px solid #2d4a3a;\r\n  border-radius: 8px;\r\n  font-size: 16px;\r\n  color: #e8f5e9;\r\n  transition: all 0.3s;\r\n  box-sizing: border-box;\r\n}\r\n\r\ninput::placeholder {\r\n  color: #81c784;\r\n  opacity: 0.6;\r\n}\r\n\r\ninput:focus {\r\n  outline: none;\r\n  border-color: #2d8659;\r\n  background-color: #1a2e24;\r\n  box-shadow: 0 0 0 3px rgba(45, 134, 89, 0.15);\r\n}\r\n\r\ninput.error {\r\n  border-color: #ef5350;\r\n}\r\n\r\n.error-message {\r\n  color: #ef5350;\r\n  font-size: 13px;\r\n  margin-top: 6px;\r\n}\r\n\r\n.success-message {\r\n  color: #2d8659;\r\n  font-size: 14px;\r\n  margin-top: 15px;\r\n  padding: 12px;\r\n  background-color: rgba(45, 134, 89, 0.1);\r\n  border: 1px solid rgba(45, 134, 89, 0.3);\r\n  border-radius: 8px;\r\n}\r\n\r\n.submit-btn {\r\n  width: 100%;\r\n  padding: 14px;\r\n  background: #2d8659;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 8px;\r\n  font-size: 16px;\r\n  font-weight: 600;\r\n  cursor: pointer;\r\n  transition: all 0.3s;\r\n  margin-top: 10px;\r\n}\r\n\r\n.submit-btn:hover:not(:disabled) {\r\n  background: #3da76d;\r\n  transform: translateY(-1px);\r\n  box-shadow: 0 4px 12px rgba(45, 134, 89, 0.3);\r\n}\r\n\r\n.submit-btn:disabled {\r\n  background: #2d4a3a;\r\n  cursor: not-allowed;\r\n  opacity: 0.6;\r\n}\r\n\r\n.register-link {\r\n  margin-top: 24px;\r\n  text-align: center;\r\n  color: #81c784;\r\n}\r\n\r\n.register-link a {\r\n  color: #2d8659;\r\n  text-decoration: none;\r\n  font-weight: 500;\r\n  transition: color 0.2s;\r\n}\r\n\r\n.register-link a:hover {\r\n  color: #3da76d;\r\n  text-decoration: underline;\r\n}\r\n</style>\r\n\r\n"],"mappings":";;AAsDA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE;QACRC,eAAe,EAAE,EAAE;QACnBC,QAAQ,EAAE;MACZ,CAAC;MACDC,oBAAoB,EAAE,EAAE;MACxBC,aAAa,EAAE,EAAE;MACjBC,YAAY,EAAE,KAAK;MACnBC,cAAc,EAAE,EAAE;MAClBC,YAAY,EAAE;IAChB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,yBAAyBA,CAAA,EAAG;MAC1B,IAAI,CAACN,oBAAmB,GAAI,EAAE;MAC9B,IAAI,CAACI,YAAW,GAAI,EAAE;IACxB,CAAC;IACDG,kBAAkBA,CAAA,EAAG;MACnB,IAAI,CAACN,aAAY,GAAI,EAAE;MACvB,IAAI,CAACG,YAAW,GAAI,EAAE;IACxB,CAAC;IACD,MAAMI,WAAWA,CAAA,EAAG;MAClB;MACA,IAAI,CAACL,cAAa,GAAI,EAAE;MACxB,IAAI,CAACC,YAAW,GAAI,EAAE;MACtB,IAAI,CAACJ,oBAAmB,GAAI,EAAE;MAC9B,IAAI,CAACC,aAAY,GAAI,EAAE;;MAEvB;MACA,IAAI,CAAC,IAAI,CAACJ,QAAQ,CAACC,eAAe,CAACW,IAAI,CAAC,CAAC,EAAE;QACzC,IAAI,CAACT,oBAAmB,GAAI,+BAA+B;QAC3D;MACF;MAEA,IAAI,CAAC,IAAI,CAACH,QAAQ,CAACE,QAAQ,EAAE;QAC3B,IAAI,CAACE,aAAY,GAAI,sBAAsB;QAC3C;MACF;MAEA,IAAI,CAACC,YAAW,GAAI,IAAI;MAExB,IAAI;QACF,MAAMQ,QAAO,GAAI,MAAMhB,KAAK,CAACiB,IAAI,CAAC,cAAc,EAAE;UAChDb,eAAe,EAAE,IAAI,CAACD,QAAQ,CAACC,eAAe,CAACW,IAAI,CAAC,CAAC;UACrDV,QAAQ,EAAE,IAAI,CAACF,QAAQ,CAACE;QAC1B,CAAC,CAAC;;QAEF;QACAa,YAAY,CAACC,OAAO,CAAC,MAAM,EAAEC,IAAI,CAACC,SAAS,CAACL,QAAQ,CAACd,IAAI,CAACoB,IAAI,CAAC,CAAC;QAChEJ,YAAY,CAACC,OAAO,CAAC,QAAQ,EAAEH,QAAQ,CAACd,IAAI,CAACoB,IAAI,CAACC,EAAE,CAAC;;QAErD;QACAC,MAAM,CAACC,aAAa,CAAC,IAAIC,WAAW,CAAC,WAAW,CAAC,CAAC;QAElD,IAAI,CAACjB,cAAa,GAAI,kCAAkC;;QAExD;QACAkB,UAAU,CAAC,MAAM;UACf,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC,GAAG,CAAC;QACxB,CAAC,EAAE,IAAI,CAAC;MACV,EAAE,OAAOC,KAAK,EAAE;QACd,IAAIA,KAAK,CAACd,QAAQ,EAAEe,MAAK,KAAM,GAAG,EAAE;UAClC,IAAI,CAACrB,YAAW,GAAIoB,KAAK,CAACd,QAAQ,CAACd,IAA